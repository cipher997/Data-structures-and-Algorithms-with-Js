    <title>Delete Element in Array - Kartik Gaikwad Codes</title>
    <script>
      //    let data  =[30,20,45,76,20,80];
      //    let position =3;
      //    for(let i=position; i<data.length-1;i++){

      //     data[i]=data[i+1];
      //    }
      //    data.length= data.length-1;
      //    console.warn(data)
      function removeEl() {
        let data = [30, 20, 45, 76, 20, 80];
        let position = document.getElementById("position").value;
        position = parseInt(position);
        for (let i = position; i < data.length - 1; i++) {
          data[i] = data[i + 1];
        }
        data.length = data.length - 1;
        console.warn(data);
      }
    </script>
  </head>
  <body>
    <input type="text" id="position" placeholder="enter position" />
    <button onclick="removeEl()">Remove Element</button>
  </body>
</html>

